generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id              String           @id @default(uuid()) @map("_id")
  name            String
  email           String           @unique
  password        String
  userPermissions UserPermission[]
  role            Int              @default(0)
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt
  deletedAt       DateTime? 
}

model RouterPermission {
    id              String     @id @default(uuid()) @map("_id")
    router_endpoint String
    role            String
    permission      Permission @relation(fields: [permissionId], references: [id])
    permissionId    String


    @@unique([router_endpoint, role]) 
}

model Permission {
    id             String           @id @default(uuid()) @map("_id")
    permissionName String           @unique
    isDefault      Int              @default(0)

    routerPermissions RouterPermission[]
}


model Role {
  id       String   @id @default(uuid()) @map("_id")
  roleName String   @unique
  value    Int
}

model UserPermission {
  id          String             @id @default(uuid()) @map("_id")
  user        User               @relation(fields: [userId], references: [id])
  userId      String             @map("user_id")
  permissions PermissionDetail[]
}

model PermissionDetail {
  id               String         @id @default(uuid()) @map("_id")
  userPermission   UserPermission  @relation(fields: [userPermissionId], references: [id])
  userPermissionId String           @map("user_permission_id")
  permissionName   String
  permissionValue  Int[]
}